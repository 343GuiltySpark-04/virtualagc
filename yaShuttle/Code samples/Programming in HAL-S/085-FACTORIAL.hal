C/ Sample from PDF p. 85 of "Programming in HAL/S".

  FACTORIAL:
  PROGRAM;
     DECLARE INTEGER,
     		RESULT, N_MAX, I;
     READ(5) N_MAX;
     RESULT = 1;
     DO FOR I = 2 TO N_MAX BY 1;
     	RESULT = I RESULT;
     END;
     WRITE(6) 'FACTORIAL=', RESULT;
     WRITE(6) 'I=', I; /* I ADDED THIS! */
  CLOSE FACTORIAL;
  