C/ From PDF p. 112 in "Programming in HAL/S".

  EXAMPLE_6:
  PROGRAM;
     DECLARE ARRAY(4, 3),
     		GYRO_INPUT INTEGER,
     		ATT_RATE SCALAR;
     DECLARE SCALE ARRAY(3) SCALAR CONSTANT(.013, .026, .013);
     DECLARE BIAS SCALAR CONSTANT(57.296);
     DO FOR TEMPORARY DEVICE = 1 TO 4;
M	[ATT_RATE]         = [GYRO_INPUT]         [SCALE] + BIAS;
S		  DEVICE,*		 DEVICE,*

     END;
  CLOSE EXAMPLE_6;
  